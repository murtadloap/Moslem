<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".TasbihActivity">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/masjid_cantik"
        android:alpha="0.75"/>

    <android.support.v7.widget.CardView
        android:id="@+id/counter"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="5dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/green">
        <TextView
            android:id="@+id/tvCounter"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50dp"
            android:maxLength="3"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-smallcaps"/>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/btnCounter"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle"
        android:onClick="countIn"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_refresh"
        android:layout_marginBottom="@dimen/btn_margin_vertical"
        android:layout_marginRight="@dimen/btn_margin_vertical"
        android:textAlignment="center"
        app:fabCustomSize="65dp"
        app:backgroundTint="@color/greenDark"
        android:onClick="btnReset"/>
</RelativeLayout>